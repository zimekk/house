{
  "name": "house",
  "version": "1.0.0",
  "repository": "https://github.com/zimekk/house.git",
  "author": "Marcin Makarewicz <zimekk@gmail.com>",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": "^18 || ^20"
  },
  "eslintConfig": {
    "extends": [
      "next/core-web-vitals",
      "turbo"
    ],
    "root": true
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.{json,js,jsx,md,scss,ts,tsx,css,yml,yaml}": "prettier --write"
  },
  "packageManager": "pnpm@9.7.0",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "start": "turbo run start",
    "lint": "turbo run lint",
    "clean": "turbo run clean",
    "reset": "pnpm store prune && rm -rf node_modules apps/*/node_modules packages/*/node_modules",
    "update:browserlist": "pnpm update caniuse-lite -r",
    "update:dedupe": "pnpm dedupe",
    "update:latest": "pnpm update --interactive --latest",
    "prepare": "husky && turbo telemetry disable"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "devDependencies": {
    "@commitlint/cli": "^19.0.0",
    "@commitlint/config-conventional": "^19.0.0",
    "eslint": "^9.0.0",
    "husky": "^9.0.0",
    "lint-staged": "^15.0.2",
    "prettier": "^3.0.0",
    "turbo": "^2.0.0"
  },
  "resolutions": {
    "next": "~14.2.0"
  }
}
